@{
    ViewData["Title"] = "Inicio";
}

<div class="hero mb-4">
    <h1 class="mb-1">Bienvenido a WikiJuegos</h1>
    <p class="text-muted mb-0">Explorá y consultá información sobre tus videojuegos favoritos.</p>
</div>

<div class="mb-3">
    <form asp-controller="Juego" asp-action="Index" method="get" class="d-flex" style="max-width:400px;">
        <input name="q" class="form-control me-2" placeholder="Buscar juegos..." />
        <button class="btn btn-primary">Buscar</button>
    </form>
</div>

<p class="text-muted">
    Podés navegar por los juegos disponibles o agregar nuevos si sos administrador.
</p>

<a asp-controller="Juego" asp-action="Index" class="btn btn-outline-primary">
    Ver juegos
</a>