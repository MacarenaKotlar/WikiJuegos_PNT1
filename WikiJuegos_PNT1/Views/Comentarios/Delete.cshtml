@model WikiJuegos_PNT1.Models.Comentario

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Borrar comentario?</h3>
<div>
    <form asp-action="Delete" asp-controller="Comentarios" asp-route-id="@Model.Id">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

<div>
    <a asp-action="Details" asp-controller="Juego" asp-route-id="@Model.JuegoId">Cancelar</a>
</div>
