@model IEnumerable<WikiJuegos_PNT1.Models.Juego>
@using System.Security.Claims;

@{
    ViewData["Title"] = "Juegos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Juegos</h2>
    <form class="d-flex" asp-action="Index" method="get">
        <input name="q" class="form-control form-control-sm me-2" placeholder="Buscar por nombre..." />
        <button class="btn btn-sm btn-primary">Buscar</button>
    </form>
</div>

<p>
    @{
        var userId = User.Claims.Where(c => c.Type == ClaimTypes.NameIdentifier).Select(c => c.Value).SingleOrDefault();
        if (userId == "1")
        {
            <a class="btn btn-outline-primary" asp-action="Create">Crear nuevo juego</a>
        }
    }
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Desarrollador</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Género</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Desarrollador</td>
                <td>@item.Descripcion</td>
                <td>@item.FechaLanzamiento.ToShortDateString()</td>
                <td>@item.Genero</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    @{
                        if (userId == "1")
                        {
                            <span>|</span>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <span>|</span>
                            <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        }
                    }
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="6">No hay juegos para mostrar.</td></tr>
    }
    </tbody>
</table>